<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="/Fonts/#AmaticSC">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" Grid.Row="0"/>
        <Label Content="Login" Grid.Column="0" Grid.Row="0"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <Label Content="Password" Grid.Column="0" Grid.Row="1"/>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="OKButton" Content="OK"/>
            <Button x:Name="CancelButton" Content="Cancel"/>
        </StackPanel>
        <Image Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left"  Source="/Images/polo.jpeg"/>
    </Grid>
</Window>
